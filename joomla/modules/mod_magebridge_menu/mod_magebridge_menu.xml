<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_MAGEBRIDGE_MENU</name>
	<author>Yireo</author>
	<creationDate>August 2015</creationDate>
	<copyright>Copyright (C) 2015 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.9.5343</version>
	<description>MOD_MAGEBRIDGE_MENU_DESC</description>

	<files folder="site">
		<filename module="mod_magebridge_menu">mod_magebridge_menu.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages folder="site/language">
        <language tag="en-GB">en-GB.mod_magebridge_menu.ini</language>
        <language tag="en-GB">en-GB.mod_magebridge_menu.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_magebridge/fields">
		        <field name="root" type="magebridge.category" default="0" return="id" allow_root="1" label="MOD_MAGEBRIDGE_MENU_FIELD_ROOT" description="MOD_MAGEBRIDGE_MENU_FIELD_ROOT_DESC" />
        		<field name="levels" type="list" default="1" label="MOD_MAGEBRIDGE_MENU_FIELD_LEVELS" description="MOD_MAGEBRIDGE_MENU_FIELD_LEVELS_DESC">
		        	<option value="1">1</option>
        			<option value="2">2</option>
		        	<option value="3">3</option>
        			<option value="4">4</option>
		        	<option value="5">5</option>
        			<option value="6">6</option>
		        	<option value="7">7</option>
        			<option value="8">8</option>
		        	<option value="9">9</option>
        			<option value="10">10</option>
		        	<option value="11">11</option>
        			<option value="12">12</option>
		        	<option value="13">13</option>
        			<option value="14">14</option>
		        	<option value="15">15</option>
        			<option value="16">16</option>
		        	<option value="17">17</option>
        			<option value="18">18</option>
		        	<option value="19">19</option>
        		</field>
				<field name="startlevel" type="list" default="1" label="MOD_MAGEBRIDGE_MENU_FIELD_STARTLEVEL" description="MOD_MAGEBRIDGE_MENU_FIELD_STARTLEVEL_DESC">
		        	<option value="1">1</option>
        			<option value="2">2</option>
		        	<option value="3">3</option>
        			<option value="4">4</option>
		        	<option value="5">5</option>
        			<option value="6">6</option>
		        	<option value="7">7</option>
        			<option value="8">8</option>
		        	<option value="9">9</option>
        			<option value="10">10</option>
		        	<option value="11">11</option>
        			<option value="12">12</option>
		        	<option value="13">13</option>
        			<option value="14">14</option>
		        	<option value="15">15</option>
        			<option value="16">16</option>
		        	<option value="17">17</option>
        			<option value="18">18</option>
		        	<option value="19">19</option>
                </field>
           	</fieldset>
			<fieldset name="styling" label="MOD_MAGEBRIDGE_MENU_FIELDSET_STYLING">
        		<field name="css_level" type="list" default="0" label="MOD_MAGEBRIDGE_MENU_FIELD_CSS_LEVEL" description="MOD_MAGEBRIDGE_MENU_FIELD_CSS_LEVEL_DESC">
		        	<option value="1">JYES</option>
        			<option value="0">JNO</option>
        		</field>
        		<field name="css_firstlast" type="list" default="0" label="MOD_MAGEBRIDGE_MENU_FIELD_CSS_FIRSTLAST" description="MOD_MAGEBRIDGE_MENU_FIELD_CSS_FIRSTLAST_DESC">
		        	<option value="1">JYES</option>
        			<option value="0">JNO</option>
		        </field>
        		<field name="css_evenodd" type="list" default="0" label="MOD_MAGEBRIDGE_MENU_FIELD_CSS_EVENODD" description="MOD_MAGEBRIDGE_MENU_FIELD_CSS_EVENODD_DESC">
		        	<option value="1">JYES</option>
        			<option value="0">JNO</option>
		        </field>
           	</fieldset>
			<fieldset name="advanced">
        		<field name="count" type="text" default="0" label="MOD_MAGEBRIDGE_MENU_FIELD_COUNT" description="MOD_MAGEBRIDGE_MENU_FIELD_COUNT_DESC" />
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="class_sfx" type="text" label="MOD_MAGEBRIDGEMENU_FIELD_CLASS_LABEL" description="MOD_MAGEBRIDGEMENU_FIELD_CLASS_DESC" />
        		<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        		<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		        </field>
        		<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        	</fieldset>
        </fields>
	</config>
</extension>
