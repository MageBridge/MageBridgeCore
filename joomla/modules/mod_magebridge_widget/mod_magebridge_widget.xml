<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_MAGEBRIDGE_WIDGET</name>
	<author>Yireo</author>
	<creationDate>${dateMonth}</creationDate>
	<copyright>Copyright (C) 2017 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>https://www.yireo.com/</authorUrl>
	<version>1.9.5456</version>
	<description>MOD_MAGEBRIDGE_WIDGET_DESC</description>

	<files folder="site">
		<filename module="mod_magebridge_widget">mod_magebridge_widget.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages folder="site/language/en-GB">
        <language tag="en-GB">en-GB.mod_magebridge_widget.ini</language>
        <language tag="en-GB">en-GB.mod_magebridge_widget.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_magebridge/fields">
		        <field name="widget" type="magebridge.widget" default="" label="MOD_MAGEBRIDGE_WIDGET_FIELD_WIDGET" description="MOD_MAGEBRIDGE_WIDGET_FIELD_WIDGET_DESC" />
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        		<field name="load_css" type="radio" class="btn-group" default="1" label="MOD_MAGEBRIDGE_LOAD_CSS" description="MOD_MAGEBRIDGE_LOAD_CSS_DESC">
		        	<option value="0">JNO</option>
        			<option value="1">JYES</option>
		        </field>
        		<field name="load_js" type="radio" class="btn-group" default="1" label="MOD_MAGEBRIDGE_LOAD_JS" description="MOD_MAGEBRIDGE_LOAD_JS_DESC">
		        	<option value="0">JNO</option>
        			<option value="1">JYES</option>
		        </field>
           	</fieldset>
			<fieldset name="advanced">
        		<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        		<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		        </field>
        		<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        	</fieldset>
        </fields>
	</config>
</extension>
