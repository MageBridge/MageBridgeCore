    <version>1.8.5088</version>
    <description>PLG_SYSTEM_MAGEBRIDGEYOO_DESC</description>

    <files>
        <filename plugin="magebridgeyoo">magebridgeyoo.php</filename>
        <filename>index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.plg_system_magebridgeyoo.ini</language>
        <language tag="en-GB">en-GB.plg_system_magebridgeyoo.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="enable_js_widgetkit" type="radio" default="1" label="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_WIDGETKIT" description="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_WIDGETKIT_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="enable_js_warp" type="radio" default="1" label="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_WARP" description="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_WARP_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="enable_js_template" type="radio" default="1" label="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_TEMPLATE" description="PLG_SYSTEM_MAGEBRIDGEYOO_ENABLE_JS_TEMPLATE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
